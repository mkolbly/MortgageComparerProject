<?xml version="1.0" encoding="utf-8"?>
<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/amortization_adapter_tablerow"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/DarkLine" >

    <TextView
        android:id="@+id/am_month"
        android:layout_width="0dp"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_weight="1"
        android:background="@color/Black"
        android:maxLines="1"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="5dp" />

    <TextView
        android:id="@+id/am_date"
        android:layout_width="0dp"
        android:layout_marginBottom="2dp"
        android:layout_marginRight="2dp"
        android:layout_weight="1"
        android:background="@color/Black"
        android:maxLines="1"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="5dp" />

    <TextView
        android:id="@+id/am_beginning_balance"
        android:layout_width="0dp"
        android:layout_marginBottom="2dp"
        android:layout_marginRight="2dp"
        android:layout_weight="1"
        android:background="@color/Black"
        android:maxLines="1"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="5dp" />

    <TextView
        android:id="@+id/am_payment"
        android:layout_width="0dp"
        android:layout_marginBottom="2dp"
        android:layout_marginRight="2dp"
        android:layout_weight="1"
        android:background="@color/Black"
        android:maxLines="1"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="5dp" />

    <TextView
        android:id="@+id/am_principal"
        android:layout_width="0dp"
        android:layout_marginBottom="2dp"
        android:layout_marginRight="2dp"
        android:layout_weight="1"
        android:background="@color/Black"
        android:maxLines="1"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="5dp" />

    <TextView
        android:id="@+id/am_interest"
        android:layout_width="0dp"
        android:layout_marginBottom="2dp"
        android:layout_marginRight="2dp"
        android:layout_weight="1"
        android:background="@color/Black"
        android:maxLines="1"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="5dp" />

    <TextView
        android:id="@+id/am_cumulative_principal"
        android:layout_width="0dp"
        android:layout_marginBottom="2dp"
        android:layout_marginRight="2dp"
        android:layout_weight="1"
        android:background="@color/Black"
        android:maxLines="1"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="5dp" />

    <TextView
        android:id="@+id/cumulative_interest"
        android:layout_width="0dp"
        android:layout_marginBottom="2dp"
        android:layout_marginRight="2dp"
        android:layout_weight="1"
        android:background="@color/Black"
        android:maxLines="1"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="5dp" />

    <TextView
        android:id="@+id/am_ending_balance"
        android:layout_width="0dp"
        android:layout_marginBottom="2dp"
        android:layout_marginRight="2dp"
        android:layout_weight="1"
        android:background="@color/Black"
        android:maxLines="1"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="5dp" />

</TableRow>